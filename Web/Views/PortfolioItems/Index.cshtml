@model IEnumerable<Core.Entities.PortfolioItem>

@{
    ViewData["Title"] = "Index";
}

<style>

    .main{
        margin:10%;
    }

    @@media (min-width:375px) and (max-width:950px) {
      .main {
       margin:17% 2% !important;
      }
    }
</style>
<div class="main">

<p>
    <a class="btn btn-primary m-3" asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-responsive-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
                        @foreach (var item in Model)
   
                    {
                <tr>
                    <td>
                                @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                                @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                                <img class="img-thumbnail" style="width:80px;height:80px" src="~/img/portfolio/@item.ImgUrl"/>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                        }
    </tbody>
</table>

</div>